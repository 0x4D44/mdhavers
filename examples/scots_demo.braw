# ============================================================
# Vocabulary Lesson
# ============================================================

blether yellow("═══════════════════════════════════════")
blether yellow("  SCOTS VOCABULARY")
blether yellow("═══════════════════════════════════════")
blether ""

ken words_tae_learn = ["aye", "nae", "braw", "wee", "bonnie", "bampot", "numpty", "haggis"]
fer word in words_tae_learn {
    blether f"  {word} = {whit_means(word)}"
}
blether ""

# Unknown word
blether f"  bletherskite = {whit_means(\"bletherskite\")}"
blether ""

# ============================================================
# Gaelic Phrases
# ============================================================

blether yellow("═══════════════════════════════════════")
blether yellow("  GAELIC PHRASES")
blether yellow("═══════════════════════════════════════")
blether ""

ken gaelic_phrases = ["slàinte mhath", "alba gu bràth", "fàilte", "ceud mìle fàilte"]
fer phrase in gaelic_phrases {
    blether f"  {phrase} = {gaelic_tae_english(phrase)}"
}
blether ""

