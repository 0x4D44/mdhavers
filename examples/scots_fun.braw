# Validate user input
dae validate_name(name) {
    gin haverin(name) {
        gie "That's haverin! Give us a proper name!"
    }
    gin scunner(name) {
        gie "Dinnae be such a scunner!"
    }
    gin is_wee(name) {
        gie "That's a wee bit short fer a name!"
    }
    gie f"Welcome, {name}!"
}

blether validate_name("")
blether validate_name("Al")
blether validate_name("Hamish McTavish")

# Format menu items
dae format_menu_item(item, price) {
    ken padded = sporran_fill(item, 20, ".")
    gie f"{padded} Â£{price}"
}

