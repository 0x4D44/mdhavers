# poetry_demo.braw - Demonstrating the Scottish poetry generator
fetch "../stdlib/poetry"

# Set a seed fer reproducible poems
set_poetry_seed(noo())

# Run the full poetry session
poetry_session()

# Generate some extra poems
blether "=== Bonus: Five More Haikus ==="
fer i in 1..6 {
    blether f"Haiku #{i}:"
    fer line in generate_haiku() {
        blether f"  {line}"
    }
    blether ""
}
