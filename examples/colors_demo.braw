blether ""

# ===============================================================
# 256 Color Palette Sample
# ===============================================================

blether "=== 256 Color Sample ==="
blether ""

ken line = ""
fer i in 0..16 {
    line = line + fg_256(tae_string(i), i) + " "
}
blether "Standard colors (0-15): " + line

blether ""

