# Add Scottish flair to any message
dae scottify(message) {
    ken result = message
    result = replace(result, "yes", "aye")
    result = replace(result, "no", "nae")
    result = replace(result, "know", "ken")
    result = replace(result, "small", "wee")
    result = replace(result, "beautiful", "bonnie")
    result = replace(result, "to", "tae")
    result = replace(result, "from", "frae")
    result = replace(result, "don't", "dinnae")
    result = replace(result, "can't", "cannae")
    result = replace(result, "won't", "willnae")
    result = replace(result, "about", "aboot")
    result = replace(result, "out", "oot")
    result = replace(result, "house", "hoose")
    result = replace(result, "child", "bairn")
    result = replace(result, "girl", "lassie")
    result = replace(result, "boy", "laddie")
    result = replace(result, "good", "guid")
    result = replace(result, "old", "auld")
    result = replace(result, "own", "ain")
    gie result
}

