# Get a random greeting
dae random_greeting() {
    ken idx = jammy(0, len(GREETINGS) - 1)
    gie GREETINGS[idx]
}

# Get a random farewell
dae random_farewell() {
    ken idx = jammy(0, len(FAREWELLS) - 1)
    gie FAREWELLS[idx]
}

# Get a random proverb
dae random_proverb() {
    ken idx = jammy(0, len(PROVERBS) - 1)
    gie PROVERBS[idx]
}

# Get a random Burns quote
dae random_burns() {
    ken idx = jammy(0, len(BURNS_QUOTES) - 1)
    gie BURNS_QUOTES[idx]
}

# Get a random insult (aw in guid fun!)
dae random_insult() {
    ken idx = jammy(0, len(INSULTS) - 1)
    gie INSULTS[idx]
}

# Translate a Scots word
dae whit_means(word) {
    ken lower_word = lower(word)
    gin dict_has(VOCABULARY, lower_word) {
        gie VOCABULARY[lower_word]
    }
    gie f"Ah dinnae ken whit '{word}' means!"
}

# Translate a Gaelic phrase
dae gaelic_tae_english(phrase) {
    ken lower_phrase = lower(phrase)
    gin dict_has(GAELIC, lower_phrase) {
        gie GAELIC[lower_phrase]
    }
    gie f"Ah dinnae ken that Gaelic phrase!"
}

# Get all Scots vocabulary
dae get_vocabulary() {
    gie VOCABULARY
}

# Get all Gaelic phrases
dae get_gaelic() {
    gie GAELIC
}

# Print a wee Scottish lesson
dae scots_lesson() {
    blether ""
    blether "╔═══════════════════════════════════════════╗"
    blether "║      WEE SCOTS LANGUAGE LESSON            ║"
    blether "╚═══════════════════════════════════════════╝"
    blether ""
    blether "Today's proverb:"
    blether f"  \"{random_proverb()}\""
    blether ""
    blether "A Burns quote fer ye:"
    blether f"  \"{random_burns()}\""
    blether ""
    blether "Vocabulary:"
    ken words = ["aye", "nae", "braw", "wee", "bonnie"]
    fer word in words {
        blether f"  {word} = {VOCABULARY[word]}"
    }
    blether ""
    blether "Gaelic phrase o' the day:"
    blether f"  slàinte mhath = {GAELIC[\"slàinte mhath\"]}"
    blether ""
    blether "Noo ye ken a wee bit mair Scots!"
}

