dae shadow_box(width, height) {
    ken art = draw_box(width, height, "single")
    ken shadowed = []

    fer i in 0..len(art) {
        ken line = art[i]
        gin i == 0 {
            shove(shadowed, line)
        } ither {
            shove(shadowed, line + "â–‘")
        }
    }

    # Bottom shadow
    ken bottom_shadow = " "
    fer i in 0..width {
        bottom_shadow = bottom_shadow + "â–‘"
    }
    shove(shadowed, bottom_shadow)

    gie shadowed
}

dae speech_bubble(text) {
    ken art = []
    ken text_len = len(text)
    ken width = text_len + 4

    # Top
    ken top = " "
    fer i in 0..width-2 {
        top = top + "_"
    }
    shove(art, top)

    # Text line
    shove(art, f"< {text} >")

    # Bottom with tail
    ken bottom = " "
    fer i in 0..width-2 {
        bottom = bottom + "â€¾"
    }
    shove(art, bottom)
    shove(art, "  \\")
    shove(art, "   \\")

    gie art
}

dae thought_bubble(text) {
    ken art = []
    ken text_len = len(text)
    ken width = text_len + 4

    # Top
    ken top = " "
