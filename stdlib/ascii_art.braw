# ============================================================
# Box Drawing
# ============================================================

dae draw_box(width, height, style = "single") {
    ken box_chars = BOX_SINGLE
    gin style == "double" {
        box_chars = BOX_DOUBLE
    } ither gin style == "rounded" {
        box_chars = BOX_ROUNDED
    }

    ken art = []

    # Top line
    ken top = box_chars["tl"]
    fer i in 0..width-2 {
        top = top + box_chars["h"]
    }
    top = top + box_chars["tr"]
    shove(art, top)

    # Middle lines
    fer j in 0..height-2 {
        ken mid = box_chars["v"]
        fer i in 0..width-2 {
            mid = mid + " "
        }
        mid = mid + box_chars["v"]
        shove(art, mid)
    }

    # Bottom line
    ken bottom = box_chars["bl"]
    fer i in 0..width-2 {
        bottom = bottom + box_chars["h"]
    }
    bottom = bottom + box_chars["br"]
    shove(art, bottom)

    gie art
}

dae draw_box_with_title(title, width = 40, style = "double") {
    ken box_chars = BOX_SINGLE
    gin style == "double" {
        box_chars = BOX_DOUBLE
    } ither gin style == "rounded" {
        box_chars = BOX_ROUNDED
    }

    ken art = []
    ken inner_width = width - 2

    # Top line
    ken top = box_chars["tl"]
    fer i in 0..inner_width {
        top = top + box_chars["h"]
    }
    top = top + box_chars["tr"]
    shove(art, top)

    # Title line
    ken title_len = len(title)
    ken left_pad = (inner_width - title_len) / 2
    ken right_pad = inner_width - title_len - left_pad

    ken title_line = box_chars["v"]
    fer i in 0..left_pad {
        title_line = title_line + " "
    }
    title_line = title_line + title
    fer i in 0..right_pad {
        title_line = title_line + " "
    }
    title_line = title_line + box_chars["v"]
    shove(art, title_line)

    # Bottom line
    ken bottom = box_chars["bl"]
    fer i in 0..inner_width {
        bottom = bottom + box_chars["h"]
    }
    bottom = bottom + box_chars["br"]
    shove(art, bottom)

    gie art
}

# ============================================================
# Progress Bars
# ============================================================

dae progress_bar(value, max_val = 100, width = 30, filled = "â–ˆ", empty = "â–‘") {
    ken ratio = value / max_val
    gin ratio > 1.0 { ratio = 1.0 }
    gin ratio < 0.0 { ratio = 0.0 }

    ken filled_count = floor(ratio * width)
    ken empty_count = width - filled_count

    ken bar = "["
    fer i in 0..filled_count {
        bar = bar + filled
    }
    fer i in 0..empty_count {
        bar = bar + empty
    }
    bar = bar + "]"

    gie bar
}

dae scots_progress_bar(value, max_val = 100, width = 30) {
    ken bar = progress_bar(value, max_val, width)
    ken percent = floor((value * 100) / max_val)

    ken message = ""
    gin percent < 25 {
        message = "Jist gettin' startit..."
    } ither gin percent < 50 {
        message = "Hauway there!"
    } ither gin percent < 75 {
        message = "Mair than hauf done!"
    } ither gin percent < 100 {
        message = "Nearly there, dinnae stop noo!"
    } ither {
        message = "Finished! Braw work!"
    }

    gie f"{bar} {percent}% - {message}"
}

