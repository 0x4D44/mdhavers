dae big_text(text) {
    ken upper_text = upper(text)
    ken lines = ["", "", "", "", ""]

    ken char_list = chars(upper_text)
    fer c in char_list {
        gin has_key(BLOCK_LETTERS, c) {
            ken letter = BLOCK_LETTERS[c]
            fer i in 0..5 {
                lines[i] = lines[i] + letter[i] + " "
            }
        } ither {
            # Unknown character - use space
            ken letter = BLOCK_LETTERS[" "]
            fer i in 0..5 {
                lines[i] = lines[i] + letter[i] + " "
            }
        }
    }

    gie lines
}

# Check if key exists in dict
dae has_key(dict, key) {
    fer k in keys(dict) {
        gin k == key {
            gie aye
        }
    }
    gie nae
}

