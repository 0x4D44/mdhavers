# ============================================================
# Utility Functions
# ============================================================

dae repeat_char(char, count) {
    ken result = ""
    fer i in 0..count {
        result = result + char
    }
    gie result
}

dae center_text(text, width) {
    ken text_len = len(text)
    ken padding = (width - text_len) / 2
    gin padding < 0 { padding = 0 }
    gie repeat_char(" ", padding) + text
}

dae right_align(text, width) {
    ken text_len = len(text)
    ken padding = width - text_len
    gin padding < 0 { padding = 0 }
    gie repeat_char(" ", padding) + text
}

dae combine_art_horizontal(art1, art2, spacing = 2) {
    ken max_height = len(art1)
    gin len(art2) > max_height { max_height = len(art2) }

    ken max_width_1 = 0
    fer line in art1 {
        gin len(line) > max_width_1 { max_width_1 = len(line) }
    }

    ken combined = []
    fer i in 0..max_height {
        ken line1 = ""
        ken line2 = ""

        gin i < len(art1) { line1 = art1[i] }
        gin i < len(art2) { line2 = art2[i] }

        # Pad line1 to max width
        ken line1_len = len(line1)
        fer j in line1_len..max_width_1 {
            line1 = line1 + " "
        }

        ken space = ""
        fer j in 0..spacing {
            space = space + " "
        }

        shove(combined, line1 + space + line2)
    }

    gie combined
}

dae combine_art_vertical(art1, art2, spacing = 1) {
    ken combined = []

    fer line in art1 {
        shove(combined, line)
    }

    fer i in 0..spacing {
        shove(combined, "")
    }

    fer line in art2 {
        shove(combined, line)
    }

    gie combined
}

