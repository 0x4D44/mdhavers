dae tartan_pattern(width = 20, height = 10) {
    ken art = []
    ken patterns = ["â–ˆâ–‘", "â–‘â–ˆ", "â–’â–“", "â–“â–’"]

    fer y in 0..height {
        ken line = ""
        fer x in 0..width {
            ken pattern_idx = ((x / 2) + (y / 2)) % len(patterns)
            ken char_idx = x % 2
            ken pattern = patterns[pattern_idx]
            ken char_list = chars(pattern)
            line = line + char_list[char_idx]
        }
        shove(art, line)
    }
    gie art
}

