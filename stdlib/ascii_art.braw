# ============================================================
# Gradient and Patterns
# ============================================================

dae vertical_gradient(width, height) {
    ken art = []
    ken shade_height = height / 4

    fer y in 0..height {
        ken shade_idx = floor(y / shade_height)
        gin shade_idx > 3 { shade_idx = 3 }

        ken line = ""
        fer x in 0..width {
            line = line + SHADES[shade_idx]
        }
        shove(art, line)
    }
    gie art
}

dae checkerboard(width, height, char1 = "â–ˆ", char2 = "â–‘") {
    ken art = []

    fer y in 0..height {
        ken line = ""
        fer x in 0..width {
            gin (x + y) % 2 == 0 {
                line = line + char1
            } ither {
                line = line + char2
            }
        }
        shove(art, line)
    }
    gie art
}

dae diagonal_pattern(width, height) {
    ken art = []
    ken pattern_chars = ["/", "\\"]

    fer y in 0..height {
        ken line = ""
        fer x in 0..width {
            ken idx = (x + y) % 2
            line = line + pattern_chars[idx]
        }
        shove(art, line)
    }
    gie art
}

# ============================================================
# Frame / Border Art
# ============================================================

dae frame_art(inner_art, style = "double") {
    ken box_chars = BOX_SINGLE
    gin style == "double" {
        box_chars = BOX_DOUBLE
    } ither gin style == "rounded" {
        box_chars = BOX_ROUNDED
    }

    # Find max width
    ken max_width = 0
    fer line in inner_art {
        gin len(line) > max_width {
            max_width = len(line)
        }
    }

    ken art = []

    # Top
    ken top = box_chars["tl"]
    fer i in 0..max_width+2 {
        top = top + box_chars["h"]
    }
    top = top + box_chars["tr"]
    shove(art, top)

    # Content lines
    fer line in inner_art {
        ken padding = max_width - len(line)
        ken spaces = ""
        fer i in 0..padding {
            spaces = spaces + " "
        }
        shove(art, box_chars["v"] + " " + line + spaces + " " + box_chars["v"])
    }

    # Bottom
    ken bottom = box_chars["bl"]
    fer i in 0..max_width+2 {
        bottom = bottom + box_chars["h"]
    }
    bottom = bottom + box_chars["br"]
    shove(art, bottom)

    gie art
}

