{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "mdhavers",
  "scopeName": "source.mdhavers",
  "fileTypes": ["braw"],
  "patterns": [
    { "include": "#comments" },
    { "include": "#strings" },
    { "include": "#fstrings" },
    { "include": "#numbers" },
    { "include": "#keywords" },
    { "include": "#constants" },
    { "include": "#operators" },
    { "include": "#functions" },
    { "include": "#variables" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.number-sign.mdhavers",
          "match": "#.*$"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.mdhavers",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.mdhavers",
              "match": "\\\\."
            }
          ]
        },
        {
          "name": "string.quoted.single.mdhavers",
          "begin": "'",
          "end": "'",
          "patterns": [
            {
              "name": "constant.character.escape.mdhavers",
              "match": "\\\\."
            }
          ]
        }
      ]
    },
    "fstrings": {
      "patterns": [
        {
          "name": "string.interpolated.mdhavers",
          "begin": "f\"",
          "end": "\"",
          "patterns": [
            {
              "name": "variable.other.interpolation.mdhavers",
              "begin": "\\{",
              "end": "\\}",
              "patterns": [
                { "include": "$self" }
              ]
            },
            {
              "name": "constant.character.escape.mdhavers",
              "match": "\\\\."
            }
          ]
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.float.mdhavers",
          "match": "\\b\\d+\\.\\d+\\b"
        },
        {
          "name": "constant.numeric.integer.mdhavers",
          "match": "\\b\\d+\\b"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.mdhavers",
          "match": "\\b(gin|ither|whiles|fer|in|brak|haud|keek|whan|hae_a_bash|gin_it_gangs_wrang)\\b"
        },
        {
          "name": "keyword.declaration.mdhavers",
          "match": "\\b(ken|dae|kin|thing|fae)\\b"
        },
        {
          "name": "keyword.return.mdhavers",
          "match": "\\b(gie)\\b"
        },
        {
          "name": "keyword.import.mdhavers",
          "match": "\\b(fetch|tae)\\b"
        },
        {
          "name": "keyword.other.mdhavers",
          "match": "\\b(blether|mak_siccar|masel)\\b"
        }
      ]
    },
    "constants": {
      "patterns": [
        {
          "name": "constant.language.boolean.true.mdhavers",
          "match": "\\b(aye)\\b"
        },
        {
          "name": "constant.language.boolean.false.mdhavers",
          "match": "\\b(nae)\\b"
        },
        {
          "name": "constant.language.null.mdhavers",
          "match": "\\b(naething)\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.logical.mdhavers",
          "match": "\\b(an|or|nae)\\b"
        },
        {
          "name": "keyword.operator.comparison.mdhavers",
          "match": "(==|!=|<=|>=|<|>)"
        },
        {
          "name": "keyword.operator.arithmetic.mdhavers",
          "match": "(\\+|-|\\*|/|%)"
        },
        {
          "name": "keyword.operator.assignment.mdhavers",
          "match": "="
        },
        {
          "name": "keyword.operator.pipe.mdhavers",
          "match": "\\|>"
        },
        {
          "name": "keyword.operator.spread.mdhavers",
          "match": "\\.\\.\\."
        },
        {
          "name": "keyword.operator.range.mdhavers",
          "match": "\\.\\."
        }
      ]
    },
    "functions": {
      "patterns": [
        {
          "name": "entity.name.function.mdhavers",
          "match": "\\b([a-zA-Z_][a-zA-Z0-9_]*)\\s*(?=\\()"
        },
        {
          "name": "support.function.builtin.mdhavers",
          "match": "\\b(len|whit_kind|tae_string|tae_int|tae_float|shove|yank|keys|values|range|abs|min|max|floor|ceil|round|sqrt|split|join|contains|reverse|sort|speir|heid|tail|bum|scran|slap|sumaw|coont|wheesht|upper|lower|shuffle|gaun|sieve|tumble|aw|ony|hunt|noo|tick|bide|clype|ceilidh|dram|birl|stooshie|sclaff|blether_format|creel|empty_creel|is_in_creel|toss_in|chuck_oot|creels_thegither|creels_baith|creels_differ|is_subset|creel_tae_list|jammy|crabbit|glaikit|numpty_check|och|jings|crivvens|help_ma_boab|roar|mutter|blooter)\\b"
        }
      ]
    },
    "variables": {
      "patterns": [
        {
          "name": "variable.other.mdhavers",
          "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b"
        }
      ]
    }
  }
}
